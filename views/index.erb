<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />

    <title>Happy Nat .com</title>

    <link rel="stylesheet" href="css/reset.css" />
    <link rel="stylesheet" href="css/text.css" />
    <link rel="stylesheet" href="css/style.css" />
  </head>
  <body>
    <div class="container">
      <h1>Happy Nat!</h1>

        <form action="/" method="post">
          <input class="reason" type="text" name="reason" maxlength="255" />
          <input class="submit" type="image" src="images/submit.png" alt="Submit" />
          <p class="auth">
          <span>
            <input id="twitter" name="auth" type="radio" value="twitter" checked />
            <label for="twitter">
              <% if session["username"] %>
                as @<%= session["username"] %>
              <% else %>
                <a href='/auth/twitter'>log in with Twitter</a>
              <% end %>
            </label>
          </span>
          </p>
        </form>
      <ul>
        <% entries.each do |entry| %>
          <li>
            <span class="reason"><%= entry.text %></span> -
            <span class="when"><a href="/view/<%= e.id %>"><%= e.create_date.humanize %></a></span>
            <span class="by">via <a href="http://twitter.com/<%= e.username %>">@<%= e.username %></a></span>
          </li>
        <% end %>
      </ul>
    </div> <!-- end .container -->
  </body>
</html>
